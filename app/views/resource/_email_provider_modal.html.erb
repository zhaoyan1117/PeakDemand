<div class="modal fade" id="email_provider_modal" tabindex="-1" role="dialog" aria-labelledby="email_provider_modal_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Contact Resource Provider</h4>
      </div>
      <div class="modal-body">

      <%= form_for :mail, :method => :post, :url => mail_provider_url, :html => {:class => 'msg_form'} do |f|  %>
        
        <%= f.hidden_field :resource_id, :value => resource.id %>
        <%= f.text_field :to, readonly: true, :class => 'msg_email', :value => resource.provider.email %><br/>
        <%= f.text_area :body, :class=> 'msg_body', :placeholder=> 'Send a message to the consumer'%>
        <%= submit_tag "Send", :class => 'send_button btn_contact' %>
      <% end %>
      
      </div>
    </div>
  </div>
</div>
