<%= form_for :resource, :method => method, :url => url, :html => {:id => form_id} do |f|  %>

	<%= f.text_field :name, :placeholder => 'resource name', :required => 'required' %><br>

	<%= f.text_field :short_description, :placeholder => 'short description' %><br>

	<%= f.text_area :description, :placeholder => 'description' %><br>

	<%= f.label :available_on %><br>
	<input id="resource_start_at" name="resource[start_at]" type="date" value=<%=Date.today%>><br>

	<%= f.label :end_at %><br>
	<input id="resource_end_at" name="resource[end_at]" type="date" value=<%=Date.today%>><br>

	<%= submit_tag "Submit" %>

<% end %>