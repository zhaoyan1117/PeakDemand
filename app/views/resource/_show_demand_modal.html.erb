<div class="modal fade" id="show_demand_modal" tabindex="-1" role="dialog" aria-labelledby="show_demand_modal_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <span class="modal-title demand_short_description" id="show_demand_modal_label"></span> <span class="demand_consumer_name"></span>
      </div>
      
      <div class="modal-body">

        <span class="demand_intensity"></span>
        from <span class="demand_start_at"></span> to <span class="demand_end_at"></span>

        <div class="demand_description"></div>

        <br>
    
        <% if user %>
          <%= form_for :mail, :method => :post, :url => mail_consumer_url, :html => {:class => 'msg_form'} do |f|  %>
              <%= f.label :To %>
              <%= f.hidden_field :demand_id %>
              <%= f.text_field :to, readonly: true, :class => 'msg_email', :id => 'demand_consumer_email' %><br/>
              <%= f.text_area :body, :class=> 'msg_body', :placeholder=> 'Send a message to the consumer'%>
            <%= submit_tag "Send", :class => 'send_button' %>
          <% end %>
    
        <% else %>
          <div class="login_in_demand_modal">
            Login to email the consumer
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>

<script type="text/javascript">
    <%= render :partial => 'show_demand',
               :formats => [:js] %>
</script>