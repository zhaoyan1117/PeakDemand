<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <span class="modal-title demand_short_description"></span> <span class="demand_consumer_name"></span>
      </div>
      
      <div class="modal-body">

        <span class="demand_intensity"></span>
        from <span class="demand_start_at"></span> to <span class="demand_end_at"></span>

        <div class="demand_description"></div><br>

          <%= form_for :mail, :method => :post, :url => "/mail/send", :html => {:class => 'msg_form'} do |f|  %>
              <%= f.label :To %>
              <%= f.text_field :to, readonly: true, :class => 'demand_consumer_email' %><br />
              <%= f.text_area :body, :class=> 'demand_consumer_msg', :placeholder=> 'Send a message to the consumer'%>
            <%= submit_tag "Send", :class => 'send_button' %>
          <% end %>







      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
    <%= render :partial => 'show_demand.js' %>
</script>