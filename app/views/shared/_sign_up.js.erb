$(document).ready(function() {
	$('.provider_identity_label').click(function(e) {
		if ($('#user_is_provider').is(':checked')) {
			$(this).css("background-color", "rgb(170, 170, 170)");
			$(this).css("border", "1px solid rgb(140,140,140)");
			$('#user_is_provider').prop('checked', false);
		} else {
			$(this).css("background-color", "#7CCD2F");
			$(this).css("border", "1px solid #015824");
			$('#user_is_provider').prop('checked', true);
		}
	    e.preventDefault();
	});

	$('.consumer_identity_label').click(function(e) {
		
		if ($('#user_is_consumer').is(':checked')) {
			$(this).css("background-color", "rgb(170, 170, 170)");
			$(this).css("border", "1px solid rgb(140,140,140)");
			$('#user_is_consumer').prop('checked', false);
		} else {
			$(this).css("background-color", "#7CCD2F");
			$(this).css("border", "1px solid #015824");
			$('#user_is_consumer').prop('checked', true);
		}
	    
	    e.preventDefault();
	});
	 
});
